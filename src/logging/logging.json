{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "level": "INFO"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "filename": "app.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "level": "INFO"
        },
        "md_citations_extraction_handler": {
            "class": "logging.FileHandler",
            "filename": "md_citations_extraction.log",
            "formatter": "standard",
            "level": "DEBUG",
            "mode": "w"
        }
    },
    "loggers": {
        "generation_logs": {
            "handlers": ["console", "file"],
            "level": "INFO",
            "propagate": false
        },
        "md_citations_extraction_logs": {
            "handlers": ["md_citations_extraction_handler", "console"],
            "level": "DEBUG",
            "propagate": false
        }
    },
    "root": {
        "handlers": ["console", "file"],
        "level": "WARNING"
    }
}